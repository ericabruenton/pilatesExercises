<body>
    <h1>Edit Exercise Page</h1>
    <form method="POST" action="/exercises/<%=exercisesList.id%>?_method=PUT">
        Name:
        <input type="text" name="name" value="<%=exercisesList.name%>" />
        <br/> Level:
        <input type="text" name="level" value="<%=exercisesList.level%>" />
        <br/> Apparatus:
        <input type="text" name="apparatus" value="<%=exercisesList.apparatus%>" />
        <br/> Description:
        <input type="text" name="description" value="<%=exercisesList.description%>" />
        <br/> Certifying Body:
        <input type="text" name="certifying_body" value="<%=exercisesList.certifying_body%>" />
        <br/>

        <input type="submit" value="Submit Changes" />
    </form>
</body>

</html>